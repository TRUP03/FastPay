<%- include('partials/header')%>

<div class="table">
    <table>
        <tr id="headings">
            <td>Name</td>
            <td>Amount</td>
            <td>Activity</td>
        </tr>
        <% people.forEach((item)=>{%>
        <form action="/delete/<%= item._id %>" method="post">
        <tr>
            <td><%= item.name %> </td>
            <td><%= item.amount %></td>
            <td>
                <button type="submit" class="delete-btn">Delete</button>
            </td>
        </tr>
        </form>
        <% }) %>

    </table>
</div>

<%- include('partials/footer')%>